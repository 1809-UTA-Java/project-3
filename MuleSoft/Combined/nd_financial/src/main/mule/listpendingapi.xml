		<http:request method="GET" doc:name="Request_Debt" doc:id="5c74ab53-796d-48e8-9774-87633ee16210" config-ref="HTTP_Request_configuration_GetDebt" url="http://localhost:8004/api/getcreditcards/{id}"/>
		<set-variable value="#[payload.balance as Number]" doc:name="Debt" doc:id="9505801d-d49d-48d2-88b1-9af848ad6bae" variableName="vDebt"/>
		<http:request method="POST" doc:name="Request_Max_LoanAmout" doc:id="48eb491f-5e48-4509-bf9f-6a85f6e1f530" config-ref="HTTP_Request_configuration_getLoanAmount" url="http://localhost:8008/api/dtir">
			<http:body ><![CDATA[#[{
	"applicant-info": {
		"salary": vars.vIncome,
		"debt": vars.vDebt
	}
}]]]></http:body>
		</http:request>
		<set-variable value="#[payload.loan-amount as Number]" doc:name="Max Loan Amount" doc:id="d11f8774-d37e-44aa-a8f9-0a49407c2f2b" variableName="vMaxLoan"/>
		<set-variable value="5" doc:name="test" doc:id="3f8f3f37-07d0-477a-bd05-2a2fac290584" variableName="vFive"/>
		<ee:transform doc:name="Transform Message" doc:id="7aa126db-1e87-4daf-9849-c3356ff0c21d" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	loan_id: payload.LOAN_ID default "",
	income: payload.INCOME default "",
	debts: payload.DEBTS default "",
	status: payload.STATUS default ""
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<logger level="INFO" message="get:\manager\listPendingApp:listpendingapi-config" />
    </flow>
