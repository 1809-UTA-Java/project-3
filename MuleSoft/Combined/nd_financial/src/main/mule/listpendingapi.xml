		<set-variable value="#[payload.income as Number]" doc:name="income" doc:id="9137e66a-4035-47f9-b1b7-6606f4d07184" variableName="vIncome"/>
		<http:request method="GET" doc:name="Request Name" doc:id="954c3b13-1270-4352-a827-ada3ced0730b" config-ref="HTTP_Request_configuration_getName" url="http://localhost:8001/api/{id}">
			<http:uri-params ><![CDATA[#[output application/java
---
{
	id : vars.vUserId
}]]]></http:uri-params>
		</http:request>
		<set-variable value="#[payload.name]" doc:name="User Name" doc:id="715d8834-5f4f-48a4-9b45-407f872f680e" variableName="vUserName"/>
		<http:request method="GET" doc:name="Request_getCreditScore" doc:id="4969eff9-66ff-45c9-9047-0d5599a138ce" config-ref="HTTP_Request_configuration_getUserId" url="http://localhost:8005/api/getCreditScore?customer-id={id}">
			<http:query-params ><![CDATA[#[output application/java
---
{
	id : vUserId
}]]]></http:query-params>
		</http:request>
		<set-variable value="#[payload.credit_score as Number]" doc:name="Credit Score" doc:id="851b0e3e-0cae-40d7-90f2-1dfaaf021eaf" variableName="vCreditScore"/>
		<http:request method="POST" doc:name="Get Risk Level" doc:id="60651ab6-9e32-41dc-89f5-f26217e3e3aa" config-ref="HTTP_Request_configuration_riskLevel" url="http://localhost:8013/api/risk">
